{% extends 'base.html.twig' %}

{% block title %}Reservation List{% endblock %}

{% block body %}
    <h1>Reservation List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Date debut</th>
                <th>Date Fin</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.price }}</td>
                <td>{{ reservation.datedebut|date('Y-m-d') }}</td>
                <td>{{ reservation.datefin|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('app_reservation_delete', {'id': reservation.id}) }}" onclick="return confirm('Are you sure you want to delete this reservation?')">Delete</a>
                    {{ include('reservation/_delete_form.html.twig') }}
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>


    {% block javascripts %}

            <script src="{{ asset('assets/plugins/dataTables/jquery.dataTables.js') }}"></script>
            <script src="{{ asset('assets/plugins/dataTables/dataTables.bootstrap.js') }}"></script>
            <script>
                $(document).ready(function () {
                    $('#dataTables-example').dataTable();
                });
            </script>
    {% endblock %}

    {% block stylesheets %}
        <link href="{{ asset('assets/plugins/dataTables/dataTables.bootstrap.css') }}" rel="stylesheet" />
    {% endblock %}
{% endblock %}

