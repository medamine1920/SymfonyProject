{% extends 'base.html.twig' %}

{% block title %}Hotel's{% endblock %}

{% block body %}
    <h1>Hotel List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Adress</th>
                <th>Stars</th>
                <th>Phone_number</th>
                <th>Available</th>
                <th>Photo</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for hotel in hotels %}
            <tr>
                <td>{{ hotel.id }}</td>
                <td>{{ hotel.name }}</td>
                <td>{{ hotel.address }}</td>
                <td>{{ hotel.stars }}</td>
                <td>{{ hotel.phoneNumber }}</td>
                <td>{{ hotel.available ? 'Yes' : 'No' }}</td>
                <td> {{ hotel.photo }}</td>
                <td>
                    <a href="{{ path('app_hotel_delete', {'id': hotel.id}) }}">Delete</a>
                    <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hotel_new') }}">Create new</a>
{% endblock %}
